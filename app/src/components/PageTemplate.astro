---
import NavBar from "./NavBar.astro";
import type { Locale } from "@/i18n/dictionaries";

interface Props {
    lang: Locale;
}

const { lang } = Astro.props;
---

<NavBar lang={lang} />
<main class="flex-1 px-4 md:px-12">
    <div class="text-gray-800 max-w-6xl flex flex-col mx-auto mt-20">
        <slot />
    </div>
</main>
<footer class="w-full px-4 md:px-12">
    <div class="max-w-6xl mx-auto border-t mt-20 pb-20"></div>
</footer>
