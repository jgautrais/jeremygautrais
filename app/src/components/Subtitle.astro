---
interface Props {
    title: string;
    class?: string;
}

const { title, class: className } = Astro.props;
---

<div class="flex items-baseline">
    <p class="font-hero text-4xl md:text-5xl font-bold me-2 text-teal-500">:</p>
    <h2
        class:list={[
            "font-hero text-3xl md:text-4xl font-bold uppercase",
            className,
        ]}
    >
        {title}
    </h2>
</div>
